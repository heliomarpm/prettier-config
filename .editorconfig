root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180

[*.{yml,yaml,md}]
indent_style = space

[*.{js,ts,html}]
indent_size = 4

[*.{js,ts}]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
